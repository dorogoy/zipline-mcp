{
  "name": "zipline-mcp-server",
  "version": "1.0.0",
  "description": "An MCP server to upload files to a Zipline-compatible host.",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "zipline-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "npm run format:check && npm run test:run && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "zipline",
    "file-upload",
    "server"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/zipline-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/zipline-mcp-server/issues"
  },
  "homepage": "https://github.com/your-username/zipline-mcp-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "prettier": "^3.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
